<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray">

            <ImageView
                android:id="@+id/imageNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:layout_margin="10dp"
                android:layout_marginVertical="5dp"
                android:foregroundGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/teal_200"
                tools:src="@drawable/ic_image_news" />

            <TextView
                android:id="@+id/titleNews"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="title news"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imageNews"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageNews"
                app:layout_constraintTop_toBottomOf="@+id/imageNews"
                tools:background="@color/teal_200" />

            <TextView
                android:id="@+id/source_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="source news"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/imageNews"
                app:layout_constraintStart_toStartOf="@id/imageNews"
                app:layout_constraintTop_toBottomOf="@+id/titleNews"
                tools:background="@color/teal_200" />

            <TextView
                android:id="@+id/dateNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date news"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/imageNews"
                app:layout_constraintTop_toBottomOf="@id/source_news"
                tools:background="@color/teal_200" />

            <TextView
                android:id="@+id/authorNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author news"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/imageNews"
                app:layout_constraintTop_toTopOf="@id/dateNews"
                tools:background="@color/teal_200" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>